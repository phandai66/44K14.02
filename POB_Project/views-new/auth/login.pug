include ../components/head.pug
block append head 
  title Trang chủ
include ../components/header.pug
include ../components/navbar.pug
.h Đăng nhập
hr.ngang
.container
  div.row
    div.col-sm-4
    div.col-sm-4
      if messages
        each message in messages
          .alert.alert-danger= message
    div.col-sm-4
  div.row.mt-3.mb-5
    div.col-sm-4
    form.form-horizontal.col-sm-4(action='/login', method='POST')
      if fromUrl
        input.form-control(type='text', name='fromUrl', value=`${fromUrl}`, hidden=true)
      .mb-2.mt-2
        label.form-label(for='username') Tên đăng nhập
        input#username.form-control(type='text', name='username')
      .mb-3
        label.form-label(for='password') Mật khẩu
        input#password.form-control(type='password', name='password')
      button.btn.btn-primary.btnn(type='submit', value='Login') Đăng nhập
      button.btn.btn-primary.btnn(type='button', value='Register', style='float : right;')
        a(href='/register' style='text-decoration:none; color: white;') Đăng ký
    div.col-sm-4

include ../components/footer.pug
