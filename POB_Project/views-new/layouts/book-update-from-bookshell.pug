.h Quản lý nhập sách
hr.ngang
.giohang(style="padding-left: 0px;")
  .container(style="display: flex; justify-content: center;")
    .thongtin(style="display: flex; justify-content: center; padding: 20px 0px;")
      table.table
        thead
          tr.table-title
            th(scope='col') Tên sách
            th(scope='col') Số lượng
            th(scope='col') Chấp nhận
        tbody
          if bookshell
            each book in bookshell
              tr
                form(action='/book-accept', method='POST')
                  input(name='bookId', value=book.bookId, hidden)
                  input(name='id', value=book.id, hidden)
                  th
                    p #{book.bookName}
                  input(name='count', value=book.count, hidden)
                  th
                    p #{book.count}
                  th(style="display: flex; flex-direction: row; justify-content: center;")
                    input.btn.btn-primary(type='submit', value="Nhập hàng") 
                    a(href=`/delete-book-sell/${book.id}`, style="display: flex; flex-direction: row; align-items: center; justify-content: center; padding-left: 10px;")
                      i(style="font-size: 1.5rem;").fas.fa-trash-alt

